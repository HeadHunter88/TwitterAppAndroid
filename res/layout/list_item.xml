<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinLayoutCells"
        android:layout_width="fill_parent"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2sp" >
    <ImageView android:id="@+id/imgView" android:layout_height="wrap_content" android:src="@drawable/icon" android:layout_width="wrap_content" android:layout_alignParentLeft="true"></ImageView>
    <TextView android:id="@+id/Cell" android:textSize="16dip" android:text="TextView" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_toRightOf="@+id/imgView" android:layout_alignTop="@+id/imgView"></TextView>
    <TextView android:id="@+id/info" android:text="TextView" android:textSize="12dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/Cell" android:layout_alignBottom="@+id/imgView" android:layout_alignLeft="@+id/Cell" android:layout_alignRight="@+id/Cell"></TextView>
</RelativeLayout>