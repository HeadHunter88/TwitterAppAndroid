<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinLayoutCells"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:orientation="horizontal"
        android:paddingTop="2sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    	
    	<ImageView android:layout_width="40dip" android:src="@drawable/icon" android:id="@+id/imgView" android:layout_height="40dip"></ImageView>
    	<LinearLayout android:paddingTop="2sp" android:layout_width="fill_parent" android:paddingRight="10sp" android:id="@+id/LinLayoutCells" android:orientation="vertical" android:paddingLeft="10sp" android:layout_height="wrap_content">
    		<TextView android:layout_width="fill_parent" android:text="TextView" android:id="@+id/Cell" android:textSize="16dip" android:layout_height="wrap_content"></TextView>
    		<TextView android:layout_width="fill_parent" android:text="TextView" android:id="@+id/info" android:textSize="12dip" android:layout_height="wrap_content"></TextView>
    	</LinearLayout>
    
</LinearLayout>